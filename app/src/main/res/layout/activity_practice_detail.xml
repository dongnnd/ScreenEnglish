<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dongnd.screenenglish.PracticeDetail"
    android:layout_margin="16dp">

    <LinearLayout
        android:id="@+id/pr_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/pr_cau"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="#0287E6"
            android:text="Câu 2/20"
            android:gravity="center"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/pr_tile"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="#0287E6"
            android:text="Tỉ lệ: 30%"
            android:textColor="#ffffff"/>

    </LinearLayout>

    <TextView
        android:id="@+id/pr_question"
        android:layout_width="match_parent"
        android:layout_below="@+id/pr_ll"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:background="#00DD00"/>

    <RadioGroup
        android:id="@+id/pr_radioGr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pr_question"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/pr_rd_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/pr_rd_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/pr_rd_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <View
        android:id="@+id/main_line_10"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_below="@+id/pr_result"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@color/sperated_line" />
    <TextView
        android:id="@+id/pr_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@+id/pr_radioGr"/>
    <TextView
        android:id="@+id/pr_explain"
        android:layout_below="@+id/main_line_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/pr_btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/pr_explain"
        android:text="Next"/>
    <Button
        android:id="@+id/pr_btn_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_toLeftOf="@+id/pr_btn_next"
        android:layout_below="@+id/pr_explain"
        android:text="Pre"/>

</RelativeLayout>
