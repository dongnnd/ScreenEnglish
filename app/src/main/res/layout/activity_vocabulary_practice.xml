<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dongnd.screenenglish.VocabularyPractice">

    <ImageView
        android:id="@+id/vp_title"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:src="@drawable/vc_title"/>

    <TextView
        android:id="@+id/vp_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_marginRight="30dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/vp_chose_list"/>

    <Button
        android:id="@+id/vp_error_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vp_title"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#ffffff"
        android:text="Các từ sai trên màn hình khóa"
        android:background="@drawable/bg_vocabulary"/>
    <Button
        android:id="@+id/vp_chose_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/vp_error_list"
        android:textColor="#ffffff"
        android:text="Chọn từ danh sách"
        android:background="@drawable/bg_vocabulary"/>
    <Button
        android:id="@+id/vp_chose_remind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/vp_chose_list"
        android:text="Thiết lập nhắc nhở"
        android:textColor="#ffffff"
        android:background="@drawable/bg_vocabulary"/>

</RelativeLayout>
